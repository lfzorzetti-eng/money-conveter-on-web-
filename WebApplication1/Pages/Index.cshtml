@page
@using ConversorDeMoedas.Pages
@model IndexModel
@{
    ViewData["Title"] = "Conversor de Moedas";
}

<div class="page-center">
    <h1>Conversor de Moedas</h1>

    <form method="post">
        <label>Valor:</label>
        <input type="number" step="0.01" asp-for="Value" required />

        <br /><br />

        <label>Moeda de Origem:</label>
        <select asp-for="CoinOrigem">
            <option value="1">Dollar</option>
            <option value="2">Real</option>
            <option value="3">Euro</option>
        </select>

        <br /><br />

        <label>Moeda de Destino:</label>
        <select asp-for="CoinDestino">
            <option value="1">Dollar</option>
            <option value="2">Real</option>
            <option value="3">Euro</option>
        </select>

        <br /><br />

        <button type="submit">Converter</button>
    </form>

    @if (Model.Result != null)
    {
        <h2>Resultado: @Model.Result</h2>
    }
</div>
